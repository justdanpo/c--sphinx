:void FULL_SCR400 ()
//BL - ζΆ¥β ®η¨αβ¨
{
	$PUSH DI
	DX=SC_INDEX;
	AL=CPWER;
	$OUT DX,AL
	DX++;
	AL=0XF;
	$OUT DX,AL
	ES=VGA_SEGMENT;
	DI=0;
?ifdef codesize
	AX><BX;
?else
	AX=BX;
?endif
	CX=32000;
	$REPZ
	$STOSB
	$POP DI
}

:void SET360X480MODE()
{
	AX=0X12;
	$INT	16
	AX=0X13;
	$INT	16
	DX=SC_INDEX;
	AX=0X604;
	$OUT DX,AX
	AX=0X100;
	$OUT DX,AX
	DX=MISC_OUTPUT;
	AL=0XE7;
	$OUT DX,AL
	DX=SC_INDEX;
	AX=0X300;
	$OUT DX,AX
	DX=GC_INDEX;
	AL=MDR;
	$OUT DX,AL
	DX++;
	$IN AL,DX
	AL&=0XEF;
	$OUT DX,AL
	DX--;
	AL=MIR;
	$OUT DX,AL
	DX++;
	$IN AL,DX
	AL&=0XFD;
	$OUT DX,AL
	DX=0X3D4;
	AL=0X11;
	$OUT DX,AL
	DX++;
	$IN AL,DX
	AL&=0X7F;
	$OUT DX,AL
	DX--;
?ifdef cpu>=2
	$CALL NEXT
	$DW 0x6b00,0X5901,0X5A02,0X8E03,0X5E04,0X8A05,0XD06,0X3E07,0X4009,0XEA10,
	    0XAC11,0XDF12,0X2D13,0X14,0XE715,0X616,0XE317;
NEXT:
	$pop SI
	$push DS
	DS=CS;
	CX=17;
	$rep
	$outsw
	$pop DS
?else
	AX=0X6B00;
	$OUT DX,AX
	AX=0X5901;
	$OUT DX,AX
	AX=0X5A02;
	$OUT DX,AX
	AX=0X8E03;
	$OUT DX,AX
	AX=0X5E04;
	$OUT DX,AX
	AX=0X8A05;
	$OUT DX,AX
	AX=0XD06;
	$OUT DX,AX
	AX=0X3E07;
	$OUT DX,AX
	AX=0X4009;
	$OUT DX,AX
	AX=0XEA10;
	$OUT DX,AX
	AX=0XAC11;
	$OUT DX,AX
	AX=0XDF12;
	$OUT DX,AX
	AX=0X2D13;
	$OUT DX,AX
	AX=0X14;
	$OUT DX,AX
	AX=0XE715;
	$OUT DX,AX
	AX=0X616;
	$OUT DX,AX
	AX=0XE317;
	$OUT DX,AX
?endif
}

