?ifndef _VGANS_
?define _VGANS_ TRUE
?warning FALSE

?define SC_INDEX    0x3c4   // Sequence Controller Index
?define CRTC_INDEX  0x3d4   // CRT Controller Index
?define MISC_OUTPUT 0x3c2   // Miscellaneous Output register
?define VGA_SEGMENT 0xa000
?define CPWER       2      //…ƒ‘’ €‡…… ‡€‘ –‚…’‚ƒ ‘‹
?define MMR         4      //…ƒ‘’  ‘’“’“› €’
?define GC_INDEX    0X3CE
?define RPSR        4
?define MDR         5
?define MIR         6
?define MSLR        9
?define SAR_h       0XC
?define ULR         0X14
?define MCR         0X17
?define SCREEN_HEIGHT 400
?define SCREEN_WIDTH  320
?define SCREEN_HEIGHT_H 480
?define SCREEN_WIDTH_H  360

:void SET320X400MODE()
{
	$PUSH DI
	AX=0X13;
	$INT 16
	DX=SC_INDEX;
	AL=MMR;
	$OUT DX,AL
	DX+=1;
	$IN AL,DX
	AL&=0XF7;
	AL|=4;
	$OUT DX,AL
	DX=GC_INDEX;
	AL=MDR;
	$OUT DX,AL
	DX+=1;
	$IN AL,DX
	AL&=0XEF;
	$OUT DX,AL
	DX-=1;
	AL=MIR;
	$OUT DX,AL
	DX+=1;
	$IN AL,DX
	AL&=0XFD;
	$OUT DX,AL
	DX=SC_INDEX;
	AL=CPWER;
	$OUT DX,AL
	DX+=1;
	AL=0XF;
	$OUT DX,AL
	ES=VGA_SEGMENT;
	DI=0;
	AX=0;
	CX=0X8000;
	$REPZ
	$STOSB
	DX=CRTC_INDEX;
	AL=MSLR;
	$OUT DX,AL
	DX+=1;
	$IN AL,DX
	AL&=0X60;
	$OUT DX,AL
	DX-=1;
	AL=ULR;
	$OUT DX,AL
	DX+=1;
	$IN AL,DX
	AL&=0XBF;
	$OUT DX,AL
	DX-=1;
	AL=MCR;
	$OUT DX,AL
	DX+=1;
	$IN AL,DX
	AL|=0X40;
	$OUT DX,AL
	$POP DI
}

:void WRITEPIXEL400()
/*
CX - x-•®®ΰ¤¨­ β (0-319)
DX - y-Y®®ΰ¤¨­ β (0-399)
BL - color- ζΆ¥β ―¨α¥« (0-255)
*/
{
	$PUSH DI
	ES=VGA_SEGMENT;
	AX=SCREEN_WIDTH/4*DX;
	$PUSH CX
	CX >>=1;
	CX >>=1;
	AX+=CX;
?ifdef codesize
	DI><AX;
?else
	DI=AX;
?endif
	$POP CX
	CL&=3;
	AH=1;
	AH<<=CL;
	DX=SC_INDEX;
	AL=CPWER;
	$OUT DX,AX
	ESBYTE[DI]=BL;
	$POP DI
}

