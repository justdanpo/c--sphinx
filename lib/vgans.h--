:void split(word split_line)
{
	DX=0X3D4;
	AL=0X18;
	$OUT DX,AL
	DX++;
	AX=split_line;
	$OUT DX,AL
	DX--;
	AL=7;
	$OUT DX,AL
	DX++;
	$IN	AL,DX
	BX=split_line;
	CL=4;
	BH<<=CL;
	BH&=0X10;
	AL&=0XEF;
	AL|=BH;
	$OUT DX,AL
	DX--;
	AL=9;
	$OUT DX,AL
	DX++;
	$IN AL,DX;
	AL&=0XBF;
	$OUT DX,AL
}

