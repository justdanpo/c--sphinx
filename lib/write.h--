:void WRITEDWORD()  /* EAX = dword value to write to screen at cursor */
{
	DI=FALSE;
	SI=9;
	ECX=1000000000;
	loop(SI){
		EDX = 0;
		$DIV ECX;
		IF(AL>0)DI++;
		IF(DI!=FALSE){
			AL+='0';
			AH=0xE;
			BX=0x0007;
			$INT 0x10
		}
?ifdef codesize
		EBX><EDX;
?else
		EBX=EDX;
?endif
		EAX=ECX/10;
?ifdef codesize
		ECX><EAX;
		EAX><EBX;
?else
		ECX=EAX;
		EAX=EBX;
?endif
	}
	AL+='0';
	AH=0xE;
	BX=0x0007;
	$INT 0x10
}
/* returns:  EAX,EBX,ECX,EDX,DI = undefined
             SI = 0 */

:void __writedword()  /* EAX = dword value to write to screen at cursor */
{
	DI=FALSE;
	SI=9;
	ECX=1000000000;
	loop(SI){
		EDX = 0;
		$DIV ECX;
		IF(AL>0)DI++;
		IF(DI!=FALSE)$CALL NEAR MEM1
		$PUSH EDX
		EAX=ECX/10;
?ifdef codesize
		ECX><EAX;
?else
		ECX=EAX;
?endif
		$POP EAX
	}
MEM1:
	AL+='0';
	AH=0xE;
	BX=0x0007;
	$INT 0x10
}
/* returns:  EAX,EBX,ECX,EDX,DI = undefined
             SI = 0 */

