:void WRITESTR2()
// AX - адрес строки
// BL - режим вывода
// DX - позиция на экране
{
	$PUSH BP
	BP=AX;
?ifdef codesize
	DI><AX;
?else
	DI=AX;
?endif
	ES=DS;
	CX=-1;
	AL=0;
	$REPNE
	$SCASB
	!CX;
	CX--;
	AL=BL;
	BX=7;
	AH=0X13;
	$INT 0X10
	$POP BP
}

:void WRITEHEXWORD()
{
	CX=4;
	loop(CX){
		$rol AX,4
		$push	AX
		AL&=0xF;
		$CMP AL,10
		$sbb AL,0x69
		$das
		AH=14;
		$INT 0x10
		$pop AX
	}
}

