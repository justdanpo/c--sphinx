:void WRITEDIGITS()  /* AX = word value to display all digits at cursor */
{
	BX=0x0007;
	DX=0;
	CX=1000;
	$DIV CX
	$AAM
	AX+=0X3030;
	CL=AL;
	AL=AH;
	AH=14;
	$INT 0X10
	AL=CL;
	AH=14;
	$INT 0X10
?ifdef codesize
	AX><DX;
?else
	AX=DX;
?endif
	CL=100;
	$DIV CL
	DL=AH;
	AL+='0';
	AH=0xE;
	$INT 0x10
	AL=DL;
	$AAM
	DL=AL;
	AL=AH;
	AL+='0';
	AH=0xE;
	$INT 0x10
	AL=DL;
	AL+='0';
	AH=0xE;
	$INT 0x10
}
/* returns:  AX,CX,DX = undefined
             BX = 7*/

:void __writedigits()  /* AX = word value to display all digits at cursor */
{
	BX=0x0007;
	DX=0;
	CX=10000;
	$DIV CX
	$CALL MEM1
	DX=0;
	CX=1000;
	$DIV CX
	$CALL MEM1
	CL=100;
	$DIV CL
	DL=AH;
	$CALL MEM1
	$AAM
	DL=AL;
	AL=AH;
	$CALL MEM1
MEM1:
	AL+='0';
	AH=0xE;
	$INT 0x10
?ifdef codesize
	AX><DX;
?else
	AX=DX;
?endif
}
