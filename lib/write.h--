:void WINDOWDOWN() // (numoflines,attribute,upperleftloc,lowerrightloc);
{
	AH=6;
	BH=BL;
	$INT 0x10
}

:void WINDOWUP() // (numoflines,attribute,upperleftloc,lowerrightloc);
{
	AH=7;
	BH=BL;
	$INT 0x10
}

:void WRITEHEX()  /* AX = word value to write */
{
	BX=7;
	DX=AX;
	$SHR AX,12
	IF(AL>=10)AL+='A'-10-'0';
	AL+='0';
	AH=0xE;
	$INT 0x10
	AX=DX;
	$SHR AX,8
	AL&=0x0F;
	IF(AL>=10)AL+='A'-10-'0';
	AL+='0';
	AH=0xE;
	$INT 0x10
	AX=DX;
	$SHR AX,4
	AL&=0x0F;
	IF(AL>=10)AL+='A'-10-'0';
	AL+='0';
	AH=0xE;
	$INT 0x10
	AL=DL;
	AL&=0x0F;
	IF(AL>=10)AL+='A'-10-'0';
	AL+='0';
	AH=0xE;
	$INT 0x10
}

:void __writehex()  // AX = word value to write !ПАРАМЕТР ПЕРЕДАЕТСЯ ЧЕРЕЗ РЕГИСТР
{
	BX=7;
	DX=AX;
	$SHR AX,12
	$CALL NEAR WR2
	$SHR AX,8
	$CALL NEAR WR
	$SHR AX,4
	$CALL NEAR WR
WR:
	AL&=0x0F;
WR2:
	IF(AL>=10)AL+='A'-10-'0';
	AL+='0';
	AH=0xE;
	$INT 0x10
	AX=DX;
}

:word HIDECUR()
//ДЕЛАЕТ НЕВИДИМЫМ КУРСОР В ТЕКСТ РЕЖ
//ВОЗВРАЩАЕТ ПРЕД ФОРМУ КУРСОРА
{
	AH=3;
	BH=0;
	$INT 0X10
	$PUSH CX
	CH=0X20;
	AH=1;
	$INT 0X10;
	$POP AX
}

:void SHOWCUR()
//УСТАНАВЛ ФОРМУ КУРСОРА
{
?ifdef codesize
	AX><CX;
?else
	CX=AX;
?endif
	AH=1;
	$INT 0X10
}

:void WRITEBYTEBIT()
//Вывести байт в битовом представлении
{
	BL=AL;
	CX=8;
	loop(CX){
		$shl BL,1
		$setb AL
		AL+=0x30;
		AH=14;
		$INT 0x10
	}
}

:void WRITEBYTE4BIT()
//Вывести байт в битовом представлении с разделением по 4 бита
{
	BL=AL;
	DL=4;
	CX=8;
	loop(CX){
		IF(CL==DL){
			AX=0xe20;
			$INT 0x10
		}
		$shl BL,1
		$setb AL
		AL+=0x30;
		AH=14;
		$INT 0x10
	}
}

:void WRITEWORDBIT()
//Вывести слово в битовом представлении
{
?ifdef codesize
	AX><BX;
?else
	BX=AX;
?endif
	CX=16;
	loop(CX){
		$shl BX,1
		$setb AL
		AL+=0x30;
		AH=14;
		$INT 0x10
	}
}

:void WRITEWORD4BIT()
//Вывести слово в битовом представлении с разделением по 4 бита
{
?ifdef codesize
	AX><BX;
?else
	BX=AX;
?endif
	DL=12;
	CX=16;
	loop(CX){
