:void BEEP()
// Outputs a beep from the internal speaker by use of BIOS video interrupt.
{
	BH=0x00;
	AX=0x0E07;
	$INT 0x10
}
/* returns:  AX = 0xE07
             BH = 0 */

:void GOTOXY()
// AL = xloc, BL = yloc
/* Sets the cursor postion to the location given by xloc and yloc.
   Location values start at zero.*/
{
	DL=AL;
	DH=BL;
	BH=0;
	AH=2;
	$INT 0x10
}
/* RETURNS:  AX,BX,DX = undefined.*/

:void GOTOXYZ()
/* AL = xloc, BL = yloc, CL = page */
/* Sets the cursor postion to the location given by xloc and yloc on the
   given video page.
   Location values start at zero.*/
{
	AH=BL;
?ifdef codesize
	DX><AX;
?else
	DX=AX;
?endif
	BH=CL;
	AH=2;
	$INT 0x10
}
/* RETURNS:  AX,BX,DX = undefined.*/

: word GETXY ()
/* Gets the cursor postion on video page zero.*/
{
	BH=0;
	AH=3;
	$INT 0x10
?ifdef codesize
	AX><DX;
?else
	AX=DX;
?endif
}
/* RETURNS:  BH = 0
             AH = cursor row
             AL = cursor column
             CH = cursor start line
             CL = cursor end line
*/

:word GETXYZ()
/* AL = video page */
/* Gets the cursor postion on the specified video page.*/
{
	BH=AL;
	AH=3;
	$INT 0x10
?ifdef codesize
	AX><DX;
?else
	AX=DX;
?endif
}
/* RETURNS:  BH = video page
             AH = cursor row
             AL = cursor column
             CH = cursor start line
             CL = cursor end line
*/

:void WRITE()
/* AL = character to write to screen at cursor */
/* Writes the specified character at the cursor and then advances the
   cursor.  Bell, CR, and LF are treated as special characters and supported.*/
{
	BX=0x0007;
	AH=0xE;
	$ INT 0x10
}
/* returns:  AH = 0xE
             BX = 7*/

:void WRITELN()
/* Moves the cursor to the beginning of the next line */
{
	BX=0x0007;
	AX=0x0E0D;
	$ INT 0x10
	AX=0x0e0A;
	$ INT 0x10
}
/* returns:  AX = 0xE0A
             BX = 7
*/

:void WRITESTR()
/* AX = offset address of string to write at cursor */
{
	BX=0x0007;
	$PUSH SI
?ifdef codesize
	SI><AX;
?else
	SI=AX;
?endif
UP:
	AH=0xE;
	$LODSB
	$CMP AL,0
	$JZ DOWN
	$INT 0x10
	$JMP SHORT UP
DOWN:
	$POP SI
}
/* returns:  AX = undefined
             BX = 7
*/

: void WRITEWORD ()  /* AX = word value to write to screen at cursor */
{
	BX=0x0007;
	$CMP AX,10000
	$JNB DOWN1
	$CMP AX,1000
	$JNB DOWN2
	$CMP AX,100
	$JNB DOWN3
	$CMP AX,10
	$JNB DOWN4
	$JMP SHORT DOWN5
DOWN1:
	DX=0;
	CX=10000;
	$DIV CX
	AL+='0';
	AH=0xE;
	$INT 0x10
?ifdef codesize
	AX><DX;
?else
	AX=DX;
?endif
DOWN2:
	DX=0;
	CX=1000;
	$DIV CX
	AL+='0';
	AH=0xE;
	$INT 0x10
?ifdef codesize
	AX><DX;
?else
	AX=DX;
?endif
DOWN3:
	CL=100;
	$DIV CL
	DL=AH;
	AL+='0';
	AH=0xE;
	$INT 0x10
	AL=DL;
DOWN4:
	$AAM
	DL=AL;
	AL=AH;
	AL+='0';
	AH=0xE;
	$INT 0x10
	AL=DL;
DOWN5:
	AL+='0';
	AH=0xE;
	$INT 0x10
}
/* returns:  AX,CX,DX = undefined
             BX = 7 */

