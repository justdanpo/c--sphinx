:void WRITEINT()  /* AX = int value to write to screen at cursor */
{
	BX=0x0007;
	$OR	AX,AX
	$JGE	MEM1
?ifdef codesize
	AX><DX;
?else
	DX=AX;
?endif
	AX=0x0E2D;
	$INT 0x10
?ifdef codesize
	AX><DX;
?else
	AX=DX;
?endif
	-AX;
MEM1:
	$CMP AX,10000
	$JNB DOWN1
	$CMP AX,1000
	$JNB DOWN2
	$CMP AX,100
	$JNB DOWN3
	$CMP AX,10
	$JNB DOWN4
	$JMP SHORT DOWN5
DOWN1:
	AX=AX/10000;
	AL+='0';
	AH=0xE;
	$INT 0x10
?ifdef codesize
	AX><DX;
?else
	AX=DX;
?endif
DOWN2:
	AX=AX/1000;
	AL+='0';
	AH=0xE;
	$INT 0x10
?ifdef codesize
	AX><DX;
?else
	AX=DX;
?endif
DOWN3:
	CL=100;
	$DIV CL
	DL=AH;
	AL+='0';
	AH=0xE;
	$INT 0x10
	AL=DL;
DOWN4:
	$AAM
	DL=AL;
	AL=AH;
	AL+='0';
	AH=0xE;
	$INT 0x10
	AL=DL;
DOWN5:
	AL+='0';
	AH=0xE;
	$INT 0x10
}
/* returns:  AX,CX,DX = undefined
             BX = 7 */

